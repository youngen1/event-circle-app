{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/api/upload/route.js", "app/api/auth/[...nextauth]/route.js", "components/ui/GoogleMapsLocationInput.jsx", "app/api/users/[username]/follow-status/route.js", "hooks/use-toast.js", "app/api/auth/check-username/route.js", "app/api/users/[username]/reviews/route.js"],
  "exclude": ["node_modules"]
}
